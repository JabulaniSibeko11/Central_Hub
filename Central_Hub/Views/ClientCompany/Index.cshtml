@model IEnumerable<ClientCompany>

@{
    ViewData["Title"] = "Client Companies";
    var searchTerm = ViewBag.SearchTerm ?? "";
    var selectedStatus = ViewBag.SelectedStatus ?? "all";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Declarify</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="~/css/companyindexcss.css" rel="stylesheet" />
    <!-- Heroicons -->
    <script src="https://unpkg.com/heroicons@2.0.18/outline/index.js"></script>

   
</head>
<body>
    <!-- Decorative Background -->
    <div class="bg-glow"></div>

    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">
                Client <span class="page-title-accent">Companies</span>
            </h1>
            <p class="page-subtitle">
                Manage client organizations, licensing, and compliance tracking across your Declarify network.
            </p>
        </div>

        <!-- Statistics Cards -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-label">Total Companies</div>
                <div class="stat-value">@Model.Count()</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Active Licenses</div>
                <div class="stat-value">@Model.Count(c => c.LicenseStatus == LicenseStatus.Active)</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Expired</div>
                <div class="stat-value">@Model.Count(c => c.LicenseStatus == LicenseStatus.Expired)</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Pending Setup</div>
                <div class="stat-value">@Model.Count(c => c.LicenseStatus == LicenseStatus.Trial)</div>
            </div>
        </div>

        <!-- Search and Filter Controls -->
        <div class="controls-section">
            <form method="get" asp-action="Index">
                <div class="controls-grid">
                    <div class="form-group">
                        <label class="form-label" for="searchTerm">Search Companies</label>
                        <input type="text"
                               id="searchTerm"
                               name="searchTerm"
                               class="form-input"
                               placeholder="Search by company name, email domain, or license key..."
                               value="@searchTerm" />
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="status">Filter by Status</label>
                        <select id="status" name="status" class="form-input">
                            <option value="all" selected="@(selectedStatus == "all")">All Status</option>
                            <option value="Active" selected="@(selectedStatus == "Active")">Active</option>
                            <option value="Expired" selected="@(selectedStatus == "Expired")">Expired</option>
                            <option value="Pending" selected="@(selectedStatus == "Pending")">Pending</option>
                        </select>
                    </div>

                    <button type="submit" class="btn-primary">
                        Apply Filters
                    </button>
                </div>
            </form>
        </div>

        <!-- Companies Table -->
        <div class="table-container">
            @if (Model.Any())
            {
                <div class="table-wrapper">
                    <table>
                        <thead>
                            <tr>
                                <th>Company Name</th>
                                <th>Email Domain</th>
                                <th>Administrator</th>
                                <th>License Key</th>
                                <th>Status</th>
                                <th>Created Date</th>
                                <th>Employees</th>
                                <th>Credits</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var company in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@company.CompanyName</strong>
                                    </td>
                                    <td>
                                        <code style="font-size: 0.875rem; color: var(--color-text-muted);">
                                            @@@company.EmailDomain
                                        </code>
                                    </td>
                                    <td>
                                        @if (company.Administrator != null)
                                        {
                                            <div>
                                                <div style="font-weight: 600;">@company.Administrator.FullName</div>
                                                <div style="font-size: 0.813rem; color: var(--color-text-muted);">
                                                    @company.Administrator.Email
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span style="color: var(--color-text-muted);">Not Assigned</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="license-key">@company.LicenseKey</span>
                                    </td>
                                    <td>
                                        @switch (company.LicenseStatus)
                                        {
                                            case LicenseStatus.Active:
                                                <span class="status-badge status-active">
                                                    <span class="status-dot"></span>
                                                    Active
                                                </span>
                                                break;
                                            case LicenseStatus.Expired:
                                                <span class="status-badge status-expired">
                                                    <span class="status-dot"></span>
                                                    Expired
                                                </span>
                                                break;
                                            case LicenseStatus.Trial:
                                                <span class="status-badge status-pending">
                                                    <span class="status-dot"></span>
                                                    Pending
                                                </span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <div>@company.CreatedDate.ToString("MMM dd, yyyy")</div>
                                        <div style="font-size: 0.813rem; color: var(--color-text-muted);">
                                            @company.CreatedDate.ToString("hh:mm tt")
                                        </div>
                                    </td>
                                    <td style="text-align: center; font-weight: 600;">
                                        @(company.EstimatedEmployeeCount ?? 0)
                                    </td>
                                    <td style="text-align: center;">
                                        <div style="font-weight: 600; color: var(--color-accent);">
                                          @*   @(company.CreditBatches. ?? 0) *@
                                        </div>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <button class="btn-icon btn-view"
                                                    title="View Details"
                                                    onclick="location.href='@Url.Action("Details", new { id = company.CompanyId })'">
                                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" width="20" height="20">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                </svg>
                                            </button>
                                            <button class="btn-icon btn-edit"
                                                    title="Edit Company"
                                                    onclick="location.href='@Url.Action("Edit", new { id = company.CompanyId })'">
                                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" width="20" height="20">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                                                </svg>
                                            </button>
                                            <button class="btn-icon btn-delete"
                                                    title="Delete Company"
                                                    onclick="if(confirm('Are you sure you want to delete @company.CompanyName?')) location.href='@Url.Action("Delete", new { id = company.CompanyId })'">
                                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" width="20" height="20">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                                </svg>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <svg class="empty-state-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                    <h3 class="empty-state-title">No Companies Found</h3>
                    <p class="empty-state-text">
                        @if (!string.IsNullOrEmpty(searchTerm) || selectedStatus != "all")
                        {
                            <text>Try adjusting your search or filter criteria.</text>
                        }
                        else
                        {
                            <text>Get started by adding your first client company.</text>
                        }
                    </p>
                </div>
            }
        </div>
    </div>

    <!-- Floating Add New Button -->
    <button class="btn-add-new" title="Add New Company" onclick="location.href='@Url.Action("Create")'">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
    </button>
</body>
</html>
